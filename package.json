{
	"name": "run-project",
	"displayName": "run project",
	"publisher": "rajratnamaitry",
	"description": "run project using package.json",
	"version": "1.1.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"icon": "icon-angular.png",
	"activationEvents": [
		"workspaceContains:**/package.json",
		"workspaceContains:**/.package.json"
	],
	"author": {
        "name": "rajratna maitry",
        "email": "rajratnamaitry@gmail.com"
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/rajratnamaitry/runNpmProject/"
    },
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "run-project.scriptRun",
				"title": "Run",
				"icon":"$(run)"
			},
			{
				"command": "run-project.scriptStop",
				"title": "Stop",
				"icon":"$(debug-stop)"
			}
		],
		"viewsContainers": {
            "activitybar": [
                {
                    "id": "angular",
                    "title": "Run Project",
                    "icon": "angular.svg"
                }
            ]
        },
        "views": {
            "angular": [
                {
                    "id": "angular-runProject",
                    "name": "Scripts"
                }
            ]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "run-project.scriptStop",
					"when": "viewItem == run",
					"group": "inline"
				},
				{
					"command": "run-project.scriptRun",
					"when": "viewItem == ready",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"go:live": "vsce package && vsce publish"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
